default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Install Tuist on the CI runner using Homebrew
    sh("brew install --cask tuist")
    # Generate Xcode project via Tuist
    sh("tuist generate --no-open")

    api_key = app_store_connect_api_key(
      key_id: ENV['FASTLANE_KEY_ID'],
      issuer_id: ENV['FASTLANE_ISSUER_ID'],
      key_content: ENV['FASTLANE_KEY'],
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      api_key: api_key
    )

    # Always bump build number (TestFlight requires unique builds)
    increment_build_number(build_number: ENV['GITHUB_RUN_NUMBER'])

    build_app(
      scheme: "HelmBriefApp",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
